{
  "name": "@nevermined-io/cli",
  "version": "0.5.2",
  "main": "index.js",
  "repository": "git@github.com:nevermined-io/cli.git",
  "author": "Nevermined",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf ./dist && mkdir ./dist && cp -r ./resources ./dist/resources",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx .",
    "format": "prettier --parser typescript --ignore-path .gitignore --write '**/*.{js,jsx,ts,tsx}'",
    "clean": "rm -rf ./dist/ ./doc/ ./.nyc_output",
    "build:watch": "npm build --watch",
    "start": "ts-node src/index.ts",
    "generate-doc": "ts-node src/generateDoc.ts",
    "test": "jest --coverage --rootDir test -w 1",
    "test:watch": "jest --watch --rootDir test"
  },
  "bin": {
    "ncli": "./dist/src/index.js"
  },
  "dependencies": {
    "@nevermined-io/nevermined-sdk-js": "0.25.0-rc1",
    "@truffle/hdwallet-provider": "^2.0.9",
    "chalk": "^4.1.2",
    "cross-fetch": "~3.1.5",
    "dotenv": "^16.0.1",
    "eta": "1.12.3",
    "ipfs-http-client-lite": "~0.3.0",
    "log4js": "^6.5.2",
    "tar": "^6.1.11",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/tar": "^6.1.1",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-alloy": "^4.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "ts-jest": "^27.0.6",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
